<style>
  .accordion {
    background-color: {{ section.settings.primary_bg_color }};
    padding: 64px 20px;
    gap: 48px;
    display: flex;
    flex-direction: column;
  }

  .container {
    gap: 24px;
    font-family: 'Roboto', sans-serif;
    letter-spacing: 0%;
    flex-grow: 0;
  }

  .title {
    margin: 0;
    font-weight: 700;
    font-size: 36px;
    color: {{ section.settings.primary_text_color }};
    line-height: 120%;
  }

  .description {
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
    color: {{ section.settings.secondary_text_color }};
  }

  .button {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
    line-height: 150%;
    font-weight: 400;
  }

  .accordion-item-title {
    border-radius: 8px;
    padding: 16px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .accordion-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media screen and (min-width: 768px) {

    .accordion {
      padding: 112px 64px;
      gap: 80px;
      flex-direction: row;
    }

    .container {
      width: 500px;
      gap: 32px;
    }

    .title {
      font-weight: 700;
      font-size: 48px;
    }

    .description {
      font-size: 18px;
    }

    .accordion-container {
      display: flex;
      flex-direction: column;
      gap: 16px;
      flex: auto;
    }

    .accordion-item-title {
      width: 100%;
      border-radius: 8px;
      padding: 16px 20px;
    }
  }
</style>

<section class="accordion">
  <div class="container">
    <h2 class="title">{{ section.settings.title }}</h2>
    <p class="description">{{ section.settings.description }}</p>
    <button class="button">{{ section.settings.button_text }}</button>
  </div>
  <article class="accordion-container">
    {% for block in section.blocks %}
      <details class="accordion-item">
        <summary
          style="border: 1px solid {{ block.settings.border_color }}; background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }};"
          class="accordion-item-title"
        >
          {{ block.settings.title }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-plus"
          >
            <path d="M5 12h14"/><path d="M12 5v14"/>
          </svg>
        </summary>
        <p class="accordion-item-content">{{ block.settings.content }}</p>
      </details>
    {% endfor %}
  </article>
</section>

<script></script>

